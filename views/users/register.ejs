<%layout('layouts/boilerplate') %> 
<h1>Register</h1>

<form action="/register" method="POST" class="validated-form" novalidate>

    <div class="mb-3">
        <label class="form-label text-muted" for="username">username:</label>
        <input class="form-control" type="text" name="username" id="username"  required>
        <div class="valid-feedback">
            <strong>Looks Good!!</strong>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label text-muted" for="email">email:</label>
        <input class="form-control" type="email" name="email" id="email"  required>
        <div class="valid-feedback">
            <strong>Looks Good!!</strong>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label text-muted" for="password">Password:</label>
        <input class="form-control" type="password" name="password" id="password"  required>
        <div class="valid-feedback">
            <strong>Looks Good!!</strong>
        </div>
    </div>
    <div class="mb-3">
        <button class="btn btn-success">Save </button>
    </div>
  
</form>